#include <stdio.h>
#include <stdlib.h>

int main(void) {
  float fatuDiario[30] = {
  22174.1664, 24537.6698, 26139.6134, 0.0, 0.0, 26742.6612, 0.0, 42889.2258, 46251.174, 11191.4722, 0.0, 0.0, 3847.4823, 373.7838, 2659.7563, 48924.2448, 18419.2614, 0.0, 0.0, 35240.1826, 43829.1667, 18235.6852, 4355.0662, 13327.1025, 0.0, 0.0, 25681.8318, 1718.1221, 13220.495, 8414.61
	};
  float maior=0, menor=0, media = 0, diario;
  int a, dias = 0;
        
  for(a=0; a<30; a++){
    if(fatuDiario[a] > maior){
      maior = fatuDiario[a];
    }
  }
  printf("O maior valor é %.4f\n", maior);
     
  for(a=0;a<30;a++){
    if(fatuDiario[a]<menor){
      menor=fatuDiario[a];
    }
  }
  printf("O menor valor é %.1f\n", menor);

  for(a=0;a<30;a++){
    media = media + fatuDiario[a]; 
  }
  media = media / 30;
  printf("Média do faturamento mensal: %.4f\n", media);
  
  for(a=0;a<10;a++){
    if(fatuDiario[a] > media){
      dias = dias + 1;
    }
  }
  printf("Número de dias no mês em que o valor de faturamento diário foi superior à média mensal: %d", dias);
  return 0;
}
